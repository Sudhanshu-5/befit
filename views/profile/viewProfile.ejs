<%- include ("../partials/profileHeader") %>
<link rel="stylesheet" href="/stylesheets/viewProfile.css"/>

<div class="container row">
  <div class="col-sm-3"></div>
  <div id="profile" class="col-sm-6">
    <h3>Profile</h3>
        <div class="form-group row">
          <label for="username" class="col-sm-4 col-form-label">Username</label>
          <div class="col-sm-8">
          <input type="text"class="form-control" id="username"  name="username" value="<%=founduser.username%>" readonly="readonly" >
          </div>
        </div>

        <div class="form-group row">
          <label for="email" class="col-sm-4 col-form-label">Email</label>
          <div class="col-sm-8">
          <input type="email" id="email"class="form-control" name="email" value="<%=currentUser.email%>" readonly="readonly" >
          </div>
        </div> 

        <div class="form-group row">
          <label for="date" class="col-sm-4 col-form-label">Date of birth</label>
          <div class="col-sm-8">
          <input type="text" id="date"class="form-control" name="date" value="<%=founduser.DOB%>" readonly="readonly" >
          </div>
        </div> 

        <div class="form-group row">
          <label for="height" class="col-sm-4 col-form-label">Height</label>
          <div class="col-sm-8">
          <input type="number" id="height"class="form-control" name="height" value="<%=founduser.height%>" readonly="readonly" >
          </div>
        </div>

        <div class="form-group row">
            <label for="weight" class="col-sm-4 col-form-label">weight</label>
            <div class="col-sm-8">
            <input type="number" id="weight" class="form-control" name="weight" value="<%=founduser.weight%>" readonly="readonly" >
            </div>
        </div>

        <div class="form-group row">
          <label for="bmi" class="col-sm-4 col-form-label">BMI</label>
          <div class="col-sm-8">
          <input type="number" id="bmi" class="form-control" name="bmi" value="<%=founduser.bmi%>" readonly="readonly" >
          </div>
        </div>
      
        <button class="btn align-center"onclick="window.location.href='/editProfile';">update profile</button>
</div>
<div class="col-sm-3"></div>
</div>
<%- include ("../partials/footer") %>
