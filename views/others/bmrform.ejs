<%- include ("../partials/header")%>

<%=JSON.stringify(info)%>
<h1>calculate BMR</h1>

<form action="/bmr" method="POST">
        <div>
          <label>
            Age
             <input name="age"    value="<%=info.age%>">   
            </label>
                       
        </div>
        <div>
          <label>
            Height (in cms)
            <input name="height" value="<%=info.height%>">
          </label>
        </div>
        <div>
          <label>
            weight
          <input name="weight" value="<%=info.weight%>">
        </label>
       </div>
        <div>
          <label>
            Activity factor
           <input  name="factor" vaue="<%=info.activityFactor%>">
          </label>
     
        </div>
        <div>
  <div class="container">

  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
    What is activity factor
  </button>
  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
  
        <div class="modal-header">
          <h4 class="modal-title">Get  ur calorie requirement</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">
          
          <table border="1">

	<thead>
		<tr>
		<th>Amount of Exercise/Activity</th>
		<th>Description</th>
		<th>Activity Factor</th>
	        </tr>
</thead>
<tbody>
	<tr>
	<td>Sedentary</td>
	<td>Little or no Exercise/ desk job</td>
	<td>1.2</td>
        </tr>

         <tr>
	<td>Lightly active</td>
	<td>Light exercise/ sports 1 – 3 days/ week</td>
	<td>1.375</td>
	
</tr>
<tr>
	<td>Moderately active</td>
	<td>Moderate Exercise, sports 3 – 5 days/ week</td>
	<td>1.55</td>
</tr>
<tr>
        <td>Very active</td>
	<td>Heavy Exercise/ sports 6 – 7 days/ week</td>
	<td>1.72</td>
</tr>
<tr>
        <td>Extremely active</td>
	<td>Very heavy exercise/ physical job/ training 2 x/ day</td>
	<td>1.9</td>
</tr>
</table>
</tbody>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div> 
      </div>
    </div>
  </div>
</div>
</div>

<button>submit</button>
<button onclick="window.location.href='/editProfile';">update ur info</button>
</form>

<%- include ("../partials/footer")%>
      